{
  "name": "@repomix/memory-benchmarks",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Memory usage benchmarks and leak detection for repomix",
  "scripts": {
    "test": "node --expose-gc simple-memory-test.js",
    "test:continuous": "node --expose-gc simple-memory-test.js continuous",
    "monitor": "node --expose-gc continuous-memory-monitor.js",
    "benchmark": "node --expose-gc memory-leak-test.js",
    "benchmark:quick": "node --expose-gc memory-leak-test.js 20 100",
    "benchmark:long": "node --expose-gc memory-leak-test.js 200 500"
  },
  "dependencies": {
    "repomix": "file:../.."
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "benchmark",
    "memory",
    "performance",
    "leak-detection"
  ]
}