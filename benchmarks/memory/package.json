{
  "name": "@repomix/memory-benchmarks",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Memory usage benchmarks and leak detection for repomix",
  "scripts": {
    "leak:quick": "node --expose-gc simple-memory-test.js",
    "leak:watch": "node --expose-gc simple-memory-test.js continuous",
    "leak:analyze": "node --expose-gc memory-leak-test.js",
    "leak:analyze:quick": "node --expose-gc memory-leak-test.js 20 100",
    "leak:analyze:long": "node --expose-gc memory-leak-test.js 200 500"
  },
  "dependencies": {
    "repomix": "file:../.."
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "benchmark",
    "memory",
    "performance",
    "leak-detection"
  ]
}