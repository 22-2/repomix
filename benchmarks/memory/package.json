{
  "name": "@repomix/memory-benchmarks",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Memory usage benchmarks and leak detection for repomix",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "leak:quick": "npm run build && node --expose-gc dist/simple-memory-test.js",
    "leak:watch": "npm run build && node --expose-gc dist/simple-memory-test.js continuous",
    "leak:analyze": "npm run build && node --expose-gc dist/memory-leak-test.js",
    "leak:analyze:quick": "npm run build && node --expose-gc dist/memory-leak-test.js 20 100",
    "leak:analyze:long": "npm run build && node --expose-gc dist/memory-leak-test.js 200 500"
  },
  "dependencies": {
    "repomix": "file:../.."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "benchmark",
    "memory",
    "performance",
    "leak-detection"
  ]
}